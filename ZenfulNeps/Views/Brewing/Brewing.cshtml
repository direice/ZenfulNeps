@model Brewing
@{
    ViewBag.Title = "Home Brewing: Brewing Efficiency Calculator";
    ViewBag.Description = "Home Brewing: Brewing Efficiency Calculator";
    ViewBag.Image = "http://zenfulneps.com/images/mashtun.jpg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
