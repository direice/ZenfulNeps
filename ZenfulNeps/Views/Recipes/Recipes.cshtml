@model List<ZenfulNeps.Models.Recipe>

@{
    ViewBag.Title = "Recipes";
    ViewBag.Image = "http://zenfulneps.com/images/recipes/pickles.jpg";
    ViewBag.Description = "The Recipe Codex contains a list of our recipes we have perfected over the years and we are offering them here at the Zenful Nepenthes. Enjoy!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <script type="text/javascript"><!--
        google_ad_client = "ca-pub-5663665114572954";
        /* Brewing */
        google_ad_slot = "9026649662";
        google_ad_width = 728;
        google_ad_height = 90;
    //-->
        $(document).tooltip();
    </script>
    <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
    </script>
</center>

<div class="msgroupbox" id="recipe">
    <span>
        <h3>The Recipe Codex</h3>
    </span>
    <div class="outercodex">
        <div class="codex">
            <div class="description">
                <p>
                    Welcome to The Recipe Codex.  Below is a list of our
                    recipes we have perfected over the years and we are
                    offering them here at the Zenful Nepenthes. Enjoy!
                </p>
            </div>
        </div>
    </div>
    <div class="recipe-list">
    @{
        foreach (var item in Model)
        {
            <div class="recipe">
                <div class="image">
                    <a href="../Recipes/Details/@item.Id">
                        <img src="../../Images/Recipes/@item.Image" title="@item.Info" alt="@item.Description" height="80" width="80" />
                    </a>	
    			</div>
                <div class="details">
                    <h3 class="name">
                        <a href="../Recipes/Details/@item.Id" title="@item.Info">@item.Description</a>
                    </h3>
                    <span class="author">by @item.Author</span>
                </div>
                <div class="recipe-desc">
		            @item.Info
		        </div>
                <div class="clearall"></div>
            </div>
        }
    }
    </div>

</div>  
